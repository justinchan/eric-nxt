<!DOCTYPE html>
<html>
<head>
  <title>NXT Asset Exchange</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <%= link_to "NXT Asset Exchange", root_path, :class => "navbar-brand" %>
    </div>
    <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Logout", destroy_user_session_path, :method => :delete %></li>
      </ul>
    <% else %>
      <div class="collapse navbar-collapse pull-right" id="bs-example-navbar-collapse-1">
        <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-inline navbar-form' }) do |f| %>
          <%= f.input :email, :required => false, :autofocus => true, :placeholder=>"Email", input_html: { size: 30 } %>
          <%= f.input :password, :required => false, :placeholder=>"Password", input_html: { size: 25 }%>
          <%= f.button :submit, "Sign in", :class=>"btn btn-primary" %>
        <% end %>
      </div><!-- /.navbar-collapse -->
    <% end %>
  </div><!-- /.container-fluid -->
</nav>
<%= render partial: "layouts/messages", flash: flash %>

<%= yield %>

</body>
</html>
